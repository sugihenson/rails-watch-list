<div class="m-3 border w-75 border-2 text-center bg-primary-subtle rounded p-3 justify-content-center">
    <h1>Movie Lists</h1>
</div>
<ul class="list-group">
    <% @lists.each do |list| %>
        <li class="list-group-item">
            <%= cl_image_tag @list.photo.key, height: 30, width: 40, crop: :fill %>%
            <%= link_to list.name.capitalize, list_path(list) %>
        </li>
     <% end %>
</ul>

<div class="d-flex justify-content-center">
    <%= link_to "Add a new list", new_list_path, class: 'm-3 btn btn-primary ' %>
</div>
